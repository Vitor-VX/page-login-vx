<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/outerLayout"
    android:layout_width="370dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:background="@drawable/background_border"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/abcginto_bold"
        android:text="Status"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="0dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/txt_game_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/background_edit_text"
        android:drawableLeft="@drawable/icon_game"
        android:drawablePadding="5dp"
        android:elevation="2dp"
        android:fontFamily="@font/dm_sans"
        android:gravity="start|center_vertical"
        android:text=""
        android:textColor="#000000"
        android:textSize="16sp"
        android:paddingStart="10dp" />

    <Space
        android:layout_width="0dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/txt_inject_version"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/background_edit_text"
        android:drawableLeft="@drawable/icon_version"
        android:drawablePadding="5dp"
        android:elevation="2dp"
        android:fontFamily="@font/dm_sans"
        android:gravity="start|center_vertical"
        android:text="Version Inject: 1.0.0"
        android:textColor="#000000"
        android:textSize="16sp"
        android:paddingStart="10dp" />

    <Space
        android:layout_width="0dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/txtDevice"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/background_edit_text"
        android:drawableLeft="@drawable/icon_mobile"
        android:drawablePadding="5dp"
        android:elevation="2dp"
        android:fontFamily="@font/dm_sans"
        android:gravity="start|center_vertical"
        android:text=""
        android:textColor="#000000"
        android:textSize="16sp"
        android:paddingStart="10dp" />


    <Space
        android:layout_width="0dp"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/btn_inject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:fontFamily="@font/abcginto_bold"
        android:text="Injectar Game"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />
</LinearLayout>
