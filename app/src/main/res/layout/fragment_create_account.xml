<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_fragment_dc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_userr" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/outerLayout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="bottom"
        android:background="@drawable/background_accout"
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/dm_sans"
            android:gravity="center"
            android:text="Crie sua conta"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/subtitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/dm_sans"
            android:gravity="center"
            android:text="Para criar o login é necessário gerar o token de autorização, caso contrário não será possível acessar o app."
            android:textColor="#070707"
            android:textSize="18sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="30dp" />

        <!--<EditText
            android:id="@+id/txt_token"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:background="@drawable/background_edit_text"
            android:drawableLeft="@drawable/icon_verifiqued"
            android:drawablePadding="5dp"
            android:fontFamily="@font/dm_sans"
            android:gravity="start|center_vertical"
            android:hint="Token"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:textColor="#000000"
            android:textSize="16sp" /> !-->

        <Button
            android:id="@+id/btn_generate_token"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:background="@drawable/background_button"
            android:fontFamily="@font/abcginto_bold"
            android:gravity="center"
            android:text="Criar conta"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>

</FrameLayout>
